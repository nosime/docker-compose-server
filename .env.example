# ===== PROJECT CONFIGURATION =====
TZ=Asia/Ho_Chi_Minh
COMPOSE_PROJECT_NAME=your_project_name

# ===== CLOUDFLARE TUNNEL =====
CLOUDFLARE_TOKEN=your_cloudflare_tunnel_token_here

# ===== WATCHTOWER AUTO-UPDATE =====
WATCHTOWER_CLEANUP=true
WATCHTOWER_POLL_INTERVAL=86400
WATCHTOWER_INCLUDE_STOPPED=true
WATCHTOWER_REVIVE_STOPPED=false

# ===== PORTAINER MANAGEMENT =====
# No specific global config needed for Portainer

# ===== OPENWEBUI AI PLATFORM =====
OPENWEBUI_SECRET_KEY=your_openwebui_secret_key_here

# ===== EXCALIDRAW DRAWING TOOL =====
# No specific global config needed for Excalidraw

# ===== AFFINE PRODUCTIVITY SUITE =====
AFFINE_POSTGRES_PASSWORD=your_strong_affine_db_password_here
AFFINE_SECRET_KEY=your_affine_application_secret_here
AFFINE_DOMAIN=https://affine.your-domain.com

# ===== DOCMOST DOCUMENTATION PLATFORM =====
DOCMOST_POSTGRES_PASSWORD=your_strong_docmost_db_password_here
DOCMOST_SECRET_KEY=your_docmost_application_secret_here
DOCMOST_NEXTAUTH_SECRET=your_docmost_nextauth_secret_here
DOCMOST_DOMAIN=https://docmost.your-domain.com

# ===== SHARED EMAIL CONFIGURATION =====
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=true
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_gmail_app_password_here
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=Your Service Name

# ===== DOMAIN CONFIGURATION =====
BASE_DOMAIN=your-domain.com
OPENWEBUI_DOMAIN=https://ai.your-domain.com
EXCALIDRAW_DOMAIN=https://draw.your-domain.com
PORTAINER_DOMAIN=https://docker.your-domain.com